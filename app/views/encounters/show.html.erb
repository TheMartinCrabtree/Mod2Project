<h1>Encounter: <%= @encounter.name %> </h1>
<div>
    <h3>Dungeon Master: <%= @encounter.dungeonmaster.name %></h3>
</div>
<p>
    Players: <% @encounter.players.each do |player| %>
        
        <li>
            <span> <strong> Name: </strong> <%= player.name %>  </span>
            <span> <strong> Level: </strong>  <%= player.player_level %>  </span>
            <span> <strong> HP:  </strong> <%= player.player_hp %> </span> 
        </li>
        
    <% end %>
</p>
<p>
    Monsters: <% @encounter.encountermonsters.each do |encountermonster| %>
        
        <li>
        <span>Name: <%= link_to encountermonster.monster.monster_name, encountermonster.monster %> </span>
        <span>CR: <%= encountermonster.monster.challenge_rating %></span>
        <span> <%= button_to "ðŸ–• remove ðŸ–•", encountermonster, method: :delete, :encounter => {:id => @encounter.id} %> </span>
        </li>
    <% end %>
</p>
<p>
<%= link_to "Edit this Encounter", edit_encounter_path(@encounter) %>
</p>
<p>
<%= link_to "Return to Encounter Index", encounters_path %>
</p>



