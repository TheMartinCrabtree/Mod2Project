<div id="centered_form"> 


<%= form_tag("/login") do %>
<h1>Login Form</h1>
    <p class="grid-container">
        <div class="item1">
            <%= label_tag :name %>
            <%= text_field_tag :name %>
            <br>
            <br>
            <%= label_tag :password %>
            <%= password_field_tag :password %>
            <br>
            <br>
            <%= submit_tag "Login" %>
        </div>
    </p>

<%end%>



</div>